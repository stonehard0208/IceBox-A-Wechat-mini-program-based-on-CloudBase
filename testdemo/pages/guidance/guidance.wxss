/* pages/guidance/guidance.wxss */
.banner_box {
	width: 100%;
	height: 100vh;
	position: relative;
}
.banner_box .wx-swiper-dot{
	width:40rpx;
	display: inline-flex;
	height: 10rpx; 
	margin-left: 20rpx;
	justify-content:space-between;
	margin-bottom: 30rpx;
}
.banner_box .wx-swiper-dot::before{
	content: '';
	flex-grow: 1;  
	background: rgba(255,255,255,0.8);
	border-radius: 10rpx
}
.banner_box .wx-swiper-dot-active::before{
	background: #1597bbe7;    
}
.img_b,.img_log {
	width: 100%;
	height: 100%;
}
.bottom{
	position: absolute;
	left: 0;
	right: 0;
	bottom: 8%;
  width:60%;
  font-size:30rpx;
  line-height:72rpx;
  text-align:center;
  border-radius:44rpx;
  border:1px solid #fff;
  margin:20% auto 0 auto;
  color:#fff;
}