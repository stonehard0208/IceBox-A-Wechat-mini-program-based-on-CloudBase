/* pages/todo/todo.wxss */
.container{
  background-color: white;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding-top: 40rpx;
}
.additem{
  width: 100%;
}
.add{
  display: flex;
  flex-direction: row;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  margin-bottom: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
  padding: 20rpx;
}
.plus{
  width: 41rpx;
  height: 41rpx;
  padding-right: 20rpx;
  padding-top: 5rpx;
}
.InputAdd{
  padding-left: 20rpx;
  font-size: 28rpx;
  height: 33rpx;
}

.today{
  font-size: 15px;
}
.todo-today{
  font-size: 15px;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  vertical-align: center;
  margin: 2px;
  font-family: 幼圆;
}
.todo-today1{
  width: 100%;
}
.empty{
  font-size: 1.2rem;
  margin-top: 300rpx;
  text-align: center;
  color: gray;
}
.today-item{
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  background-color: #226c89;
  border: 10rpx solid white;
  border-radius: 20rpx;
}
.itemdescriptiont{
  flex: 1;
  font-size: 35rpx;
  color: white;
  padding-top: 5rpx;
}
.itemdescriptiontcompleted{
  flex: 1;
  text-decoration: line-through;
  font-size: 35rpx;
  color: white;
  padding-top: 5rpx;
}
.itemremove{
  cursor: pointer;
  padding-top: 7rpx;
  margin-right: 8rpx;
}
.itemcheckbox{
  margin-right: 20rpx;
  padding-top: 7rpx;
}
.addref{
  width: 40rpx;
  height: 40rpx;
  display: flex;
  margin-right: 25rpx;
  margin-top: 7rpx;
}
.footer{
  font-size: 30rpx;
  font-family:Monospaced Number;
  color: rgba(128, 128, 128, 0.900);
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 30%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 40rpx;
  padding-bottom: 10rpx;
  font-size: 30rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  width: 100%;
  height: 500rpx;
  overflow: scroll;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.modal-content::-webkit-scrollbar {
  display: none;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 40rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 100%;
  color: #ec5300;
  text-align: center;
  font-size:28rpx;
}
.f_item{
  padding: 10rpx;
  height: 60rpx;
  width: 100%;
  display: flex;
  align-content: center;
  align-items: center;
  justify-content:space-around;
  background-color:#f1f1f1;
  margin: 0 auto;
  text-align: center;
  border-bottom: 1rpx solid rgb(235, 235, 235);
}
.f_item image{
  padding-block: 15rpx;
  width: 50rpx;
  height: 50rpx;
}
.f_item,.text{
  color: #030303;
  text-align: center;
  font-size: 20rpx;
}
.fresh_day{
  align-self:center;
  width: 50rpx;
  color: #fff;
  text-align:center;
  font-size:10px;
}
.fresh_day_red{
  background-color: #ff6768;
  border-radius: 20rpx;
}
.fresh_day_blue{
  background-color:blue;
  border-radius: 20rpx;
}
.fresh_day_green{
  background-color: #7dce94;
  border-radius: 20rpx;
}
.text{
  text-align: center;
  font-size: 28rpx;
}
.modal-tips{
  text-align: center;
  font-size: 20rpx;
  color: gray;
  margin-bottom: 15rpx;
}