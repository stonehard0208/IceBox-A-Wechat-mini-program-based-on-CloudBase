/* pages/index1/index1.wxss */
.page-cont,.shadow-box{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99;
  background-color: rgba(22, 23, 24, 0.5);
}
.page-cont .top{
  width:100%;
  display:flex;
  flex-direction: column;
  margin-top: 9vh;
}
.page-cont .top image{
  width:35px;
  height:45px;
  margin:4% 0 1% 75%;
}
.page-cont .top .p_one{
  float:right;
  width:80%;
  font-size:28rpx;
  line-height:72rpx;
  color:#fff;
  background:#1597bb;
  text-align:center;
  border-radius:34rpx;
  margin: 0 0 0 15%;
}
.page-cont .cont{
  width:100%;
  margin-top:30rpx;
  display:flex;
  flex-direction:column;
}
.page-cont .cont .cont-p{
  width:80%;
  margin-left:5%;
  /* margin-top:30rpx; */
  margin-top: 4vh;
  display:flex;
  color:#fff;
  font-size:30rpx;
  line-height:72rpx;
}
.page-cont .cont .cont-p .text{
  color:#fff;
  font-size:30rpx;
  line-height:40rpx;
  width:40rpx;
  height:40rpx;
  text-align:center;
  border-radius:50%;
  background:#1597bb;
  margin-right:20rpx;
  margin-top:16rpx;
  display:flex;
  flex-direction:column;
}
.page-cont .cont .cont-p image{
  width:41px;
  height:28px;
  margin:8rpx 0 0 20rpx;
  border:1px dashed #fff;
}
.page-cont .cont .cont-p-lib{
  width:90%;
  margin-left:5%;
  display:flex;
  color:#fff;
  font-size:30rpx;
}
.page-cont .cont .cont-p-lib .text{
  color:#fff;
  font-size:30rpx;
  line-height:40rpx;
  width:40rpx;
  height:40rpx;
  text-align:center;
  border-radius:50%;
  background:#1597bb;
  margin-right:20rpx;
  margin-top:16rpx;
  display:flex;
  flex-direction:column;
}
.page-cont .cont .cont-p-three{
  width:80%;
  margin-left:10%;
  margin-top:30rpx;
  display:flex;
  align-items: center;
  color:#fff;
  font-size:30rpx;
  line-height:72rpx;
}
.page-cont .cont .cont-p-three image{
  width:50px;
  height:45px;
  margin-right:20rpx;
}
.page-cont .cont .cont-p-three .arrow1{
  transform: rotate(75deg);
}
.cont-p-three .right{
  width:80px;
  height:80px;
  border:1px dashed #fff;
  padding: 10rpx 30rpx;
  display:flex;
  text-align:center;
  font-size:18rpx;
  line-height:46rpx;
  color:#FFF;
}
.cont-p-three .right .left-p{
  display:flex;
  flex-direction: column;
  flex:1;
  text-align:center;
  align-items:center;
  position: relative;
}
.cont-p-three .right .left-p image{
  width:30px;
  height:30px;
  margin-left: 20rpx;
  background-color: #fff;
  border-radius: 50%;
  padding:10rpx;
}
.page-cont .bottom{
  width:60%;
  font-size:30rpx;
  line-height:72rpx;
  text-align:center;
  border-radius:44rpx;
  border:1px solid #fff;
  margin:20% auto 0 auto;
  color:#fff;
}