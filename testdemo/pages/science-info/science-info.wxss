

.bg-group{
  position: relative;
  height: 45vh;
  overflow: hidden;
}
.poster-bg,.bg-group::after{
  position: absolute;
  width: 100%;
  height: 32vh;
  top: 0;
  left: 0;
}
.bg-group::after{
  content: '';
  background-color: rgba(0,0,0, .3);
}
.poster-bg{
  filter: blur(20rpx);
  background-size: cover;
  background-position: center;
  transition: background .3s ease-in-out;
}
.image-wrap{
  width: 100%;
  height: 100%;
  z-index: 2;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 100rpx;
 
}
.img{
  width: 270rpx;
  height: 270rpx;
  border-radius: 50%;
}

.food-title{
  font-size: 50rpx;
  font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
  display: flex;
  align-items: center;
  justify-content: center;
}

.science-info-group{
