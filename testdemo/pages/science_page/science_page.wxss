.container{
  padding: 40rpx 40rpx 100rpx;
  background-color: #eee;
}

.container .food-group{
  background-color:#fff;
  display:flex;
  margin-bottom:55rpx;
  border-radius: 40rpx; 
  border-style: solid;
  box-shadow:0px 2px 4px 2px #DDDDDD;
  border-width: 0rpx;
  
}



.food-group .food-image{
  /* display: flex; */
  width: 35vw;
  height:35vw;
  /* padding: 15rpx; */
  margin: 7vw 2vw 6vw 6vw;
  /* border-style: solid;
  box-shadow:1px 1px 1px 1px #DDDDDD;
  border-width: 0rpx; */

}


.food-group .info-group{
  width: 40vw;
  margin-top: 3vh;
  padding: 1vh;
}


.info-group .name-group{
  width: 250rpx;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
  padding-bottom: 11rpx;
  border-bottom: 2rpx solid #eee;
  margin-bottom: 8rpx;
  
  
}
.info-group .cal{
  font-size: 24rpx;
  padding: 5rpx;
  margin-bottom: 2rpx;
  color: darkgray;
}

.info-group .science{
  font-size: 28rpx;
  padding: 5rpx;
}


.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  color:darkgray
}
.navbar .item.active{
  color: #226c89;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 0.5vh;
  background: #226c89;
}

.searchbar{
  background-color: #226c89;
  padding: 20rpx 30rpx;
}

.search-navigator{
  width: 100%;
  height: 60rpx;
  background-color: #fff;
  border-radius: 10rpx;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 8%;
}

.search-input-group{
  width: 100%;
  height: 60rpx;
  
  background-color: #fff;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.search-input{
  min-height: 40rpx;
  height: 40rpx;
  font-size: 12px;
}

.newsContainer{
  padding-bottom: 50rpx;
}

.news{
  border-bottom: 2rpx solid rgba(151, 151, 151, 0.1);
  width: 100%;
  padding-bottom: 25rpx;
}

.news-title{
  font-size: 35rpx;
  margin: 35rpx;
  font-weight: 600;

}

.news-pic-group{
  margin: 10rpx;
  margin-left: 35rpx;
  margin-right: 35rpx;
  display: flex;
  justify-content: space-between; 
  
}

.news-pic{
  width: 29vw;
  height: 29vw;
  margin: 0 1vw 1vh 0;
  border-radius: 5rpx;
}

.news-author{
  font-size: 25rpx;
  color:darkgray;
  margin-left: 35rpx;
  display: inline;
  /* float: none; */
}
 .news-time{
  font-size: 25rpx;
  color:darkgray;
  margin-left: 18rpx;
  display: inline;
  /* float: none; */

}